NODE_ENV=production
PORT=5000

# Database - Update with your MongoDB Atlas connection string
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/launchpadmarket?retryWrites=true&w=majority

# JWT - Use a strong secret in production
JWT_SECRET=your_secure_production_jwt_secret
JWT_EXPIRE=24h



# Email (for notifications) - Update with your production email settings
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_production_email@yourdomain.com
EMAIL_PASS=your_production_email_password

# Frontend URL - Update with your production frontend URL
CLIENT_URL=https://yourdomain.com